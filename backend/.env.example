# Copy to .env and fill in.
# Choose provider:
#   deepseek  -> base_url defaults to https://api.deepseek.com , model deepseek-chat
#   other     -> base_url defaults to https://api.openai.com/v1 , model gpt-4o-mini (or any OpenAI-compatible provider)
LLM_PROVIDER=deepseek

# API key (required)
LLM_API_KEY=YOUR KEY

# Optional overrides:
# LLM_BASE_URL=https://api.deepseek.com
# LLM_MODEL=deepseek-chat

# Optional tuning
TEMPERATURE=0.2
MAX_TOKENS=400
MAX_TEXT_CHARS=5000

# CORS (for demo UI)
CORS_ALLOW_ORIGINS=*
